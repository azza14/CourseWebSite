@model CourseApp.Areas.Admin.Models. LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_OfflineLayout.cshtml";
}
<div class="container">
    <div class="row   justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor( m=>m.Email, new {@class= "form-control " , placeholder =" Enter Email Please "} )
                            @Html.LabelFor(m=>m.Email)
                        </div>
                        <div class="form-floating mb-3">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control ", placeholder = "  Password" })
                            @Html.LabelFor(m => m.Password)
                           
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="">
                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                        </div>

                        <button type="submit" class="btn btn-primary col-12">Login</button>
                        <div class=" text-center py-3">
                            <a class="small" href="password.html">Forgot Password?</a>

                        </div>
                    }
                    @if(Model != null && Model.Message != null)
                        {
                        <div class="alert alert-danger" >
                              @Model.Message
                        </div>

                        }
                </div>
                   
            </div>
        </div>
    </div>
</div>